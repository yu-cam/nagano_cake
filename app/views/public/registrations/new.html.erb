<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <!--フォーム追加-->
  <h4>名前</h4>
  <div class="field">
    <%= f.label :姓 %><%= f.text_field :last_name, autofocus: true %>
    <%= f.label :名 %><%= f.text_field :first_name, autofocus: true %>
  </div>
  <h4>フリガナ</h4>
  <div class="field">
    <%= f.label :セイ %><%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.label :メイ %><%= f.text_field :first_name_kana, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号ハイフンなし %><br>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
     <%= f.label :住所 %><br />
     <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号ハイフンなし %><br>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認用 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%= f.submit '新規登録', class: "btn-sm btn-success" %>
  <% end %>

  <h4>既に登録済みの方</h4>
<%= link_to "こちらから", new_customer_session_path %>
