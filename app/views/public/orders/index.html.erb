<div class="container">
  <div class="row">
	<h4>注文履歴一覧</h4>
	  <table class="table table-bordered">
	    <thead>
	      <tr>
	      	<th>注文日</th>
	      	<th>注文の配送先</th>
	      	<th>注文商品</th>
	      	<th>支払金額</th>
	      	<th>ステータス</th>
	      	<th>注文詳細</th>
	      </tr>
	    </thead>
	    <tbody>
	      <% @orders.each do |order| %>
	      <tr>
	    	<td><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
	    	<td><%= order.address %></td>
	    	<td><% order.order_details.each do |order_detail_item| %>
	    	    <%= order_detail_item.item.name %>
	            <% end %></td>
	    	<td><%= order.total_payment %>円</td>
	    	<td><%= order.status %></td>
	    	<td><%= link_to "表示する", public_order_path(order), class: "btn btn-primary" %></td>
	      <% end %>
	      </tr>
	    </tbody>
	  </table>
  </div>
</div>