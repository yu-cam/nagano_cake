<div class="container">
  <div class="row">
	<h4>注文履歴一覧</h4>
	  <table class="table table-bordered">
	    <thead>
	      <tr>
	      	<th>注文日</th>
	      	<th>注文の配送先</th>
	      	<th>注文商品</th>
	      	<th>支払金額</th>
	      	<th>ステータス</th>
	      	<th>注文詳細</th>
	      </tr>
	    </thead>
	    <tbody>
	      <tr>
	      	<% @orders.each do |order| %>
	    	<td><%= order.created_at %></td>
	    	<td><%= order.address %></td>
	    	<td><%= order.item %></td>
	    	<td><%= order.total_payment %></td>
	    	<td><%= order.status %></td>
	    	<td><%= link_to "表示する", class: "btn btn-primary" %></td>
	    	<% end %>
	      </tr>
	    </tbody>
	   </table>
  </div>
</div>