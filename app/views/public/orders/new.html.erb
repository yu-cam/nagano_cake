<div class="container">
  <div class="row">
  <h1>注文情報入力</h1>

<h4>支払い方法</h4>
<%= form_with model: @order, url:public_orders_confirm_path, local: true do |f| %>
  <label><%= f.radio_button :payment_method, "クレジットカード" %> クレジットカード </label>
  <label><%= f.radio_button :payment_method, "銀行振込" %> 銀行振込 </label>


<h4>お届け先</h4>
  <label><%= f.radio_button :address_option, 0 %>"ご自身の住所"</label>
         <h4><%= @customer.address %></h4>
         <h4><%= @customer.last_name %></h4>

  <label><%= f.radio_button :address_option, 1 %>"登録済みの住所から選択"</label>
      <h4><%= f.collection_select :address, Address.all, :name, :profile %></h4>

    <label><%= f.radio_button :address_option, 3 %>"新しいお届け先"</label>
    <h4>郵便番号 ハイフンなし</h4><%= f.text_field :postal_code %>
    <h4>住所</h4><%= f.text_field :address %>
    <h4>宛名</h4><%= f.text_field :name %>
    <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
<% end %>

  </div>
</div>