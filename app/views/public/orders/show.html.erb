<div class="container">
  <div class="row">
  	<h1>注文履歴詳細</h1>
  	  <div class="col-xs-6">
  	  <p>注文情報</p>
  	  <table class="table table-bordered">
        <tr>
		  <th>注文日</th>
		  <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M") %>
		</tr>
		<tr>
		  <th>注文の配送先</th>
		  <td><%= @order.address %>
		</tr>
		<tr>
		  <th>支払方法</th>
		  <td><%= @order.payment_method %></td>
		</tr>
		<tr>
		  <th>ステータス</th>
		  <td><%= @order.status %></td>
		</tr>
	  </table>
	  </div>

      <div class="col-xs-6">
      <P>請求情報</P>
      <table class="table table-bordered">
      	<tr>
		  <th>商品合計</th>
		  <td><%= ((@price * 1.08).round(2)).ceil %></td>
		  <%# @order.order_details.each do |order_detail_item| %>
		  <%#= ((order_detail_item.item.price * order_detail_item.amount * 1.08).round(2)).ceil %>
		  <%# end %>
		</tr>
		<tr>
		  <th>配送料</th>
		  <td><%= @order.shipping_cost %>
		</tr>
		<tr>
		  <th>ご請求額</th>
		  <td><%= @order.total_payment %></td>
		</tr>
	  </table>
	  </div>

      <div class="col-xs-8">
      <p>注文内容</p>
      <table class="table table-bordered">
        <tr>
         <th>商品</th>
         <th>単価(税込)</th>
         <th>個数</th>
         <th>小計</th>
        </tr>
          <% @order.order_details.each do |order_detail_item| %>
        <tr>
          <td><%= order_detail_item.item.name %></td>
          <td><%= ((order_detail_item.price * 1.08).round(2)).ceil %></td>
          <td><%= order_detail_item.amount %></td>
          <td><%= ((order_detail_item.price * 1.08).round(2)).ceil * order_detail_item.amount %></td>
          <% end %>
        </tr>
      </table>


  </div>
</div>