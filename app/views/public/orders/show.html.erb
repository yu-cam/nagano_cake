<div class="container">
  <div class="row">
  	<h1>注文履歴詳細</h1>
      <p>注文情報</p>
        <table class="table table-bordered">
          <tr>
		    <th>注文日</th>
		    <td><%= @order.created_at %></td>
		  </tr>
		  <tr>
		    <th>注文の配送先</th>
		    <td><%= @order.address %></td>
		  </tr>
		  <tr>
		    <th>支払方法</th>
		    <td><%= @order.payment_method %></td>
		  </tr>
		  <tr>
		    <th>ステータス</th>
		    <td><%= @order.status %></td>
		  </tr>
 　　　　</table>
     <h5>注文内容</h5>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @orders.each do |order| %>
			  <td><%= order.cart_item.item.name %></td>
			  <td><%= order.cart_item.item.price %></td>
			  <td><%= order.cart_item.amount %></td>
			  <td><%= ((order.cart_item.item.price * order.cart_item.amount * 1.08).round(2)).ceil %></td>
			<% end %>
		  </tbody>
	    </table>
     <h5>請求情報</h5>
       <table class="table table-bordered">
          <tr>
		    <th>商品合計</th>
		    <td><%= ((@total_price * 1.08).round(2)).ceil %></td>
		  </tr>
		  <tr>
		    <th>配送料</th>
		    <td><%= 800 %></td>
		  </tr>
		  <tr>
		    <th>ご請求額</th>
		    <td><%= ((@total_price * 1.08).round(2)).ceil + 800 %></td>
		  </tr>
	   </table>
  </div>
</div>