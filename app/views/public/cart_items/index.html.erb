<div class="container">
  <div class="row">
  	<h4>ショッピングカート</h4>
    <p></p>
    <%= button_to "カートを空にする", destroy_all_public_cart_items_path, method: :delete, class: "btn-sm btn-danger" %>
    <table class="table table-bordered">
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<% @cart_items.each do |cart_item| %>
			<th><%= cart_item.item.name %></th>
			<td><%= cart_item.item.price %></td>
			<td><%= form_with(model: @cart_item) do |f| %>
				<%= f.select :amount, [["1", 1], ["2", 2], ["3", 3], ["4", 4]],selected: cart_item.amount %>
			    <%= f.submit 'カートに入れる', class: "btn-sm btn-success" %>
            <% end %></td>
			<td><%= cart_item.amount %></td>
			<!-- amount_price -->
			<td><%= ((cart_item.item.price * cart_item.amount * 1.08).round(2)).ceil %></td>
			<td><%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete, class: "btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
			<% end %>
		</tr>
	 </tbody>
     </table>
        <table class="table table-bordered">
        	<thead>
        	<tr>
        	  <th>合計</th>
        	</tr>
        </thead>
        <tbody>
          <tr>
          	<td><%= ((@total_price * 1.08).round(2)).ceil %></td>
        	</tr>
        </tbody>
        </table>
        <P></P>
        <%= link_to "買い物を続ける", public_items_path, class: "btn btn-primary" %>
		<%= link_to "情報入力に進む", new_public_order_path, class: "btn-sm btn-success" %>
  </div>
</div>
