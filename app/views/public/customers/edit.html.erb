<div class="container">
  <div class="row">
   <h1>会員情報編集</h1>
   <%= form_with(model: @customer, url:public_customers_path) do |f| %>
   <h4>氏名</h4>
   <%= f.text_field :last_name %><%= f.text_field :first_name %>
   <h4>フリガナ</h4>
   <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
   <h4>郵便番号</h4>
   <%= f.text_field :postal_code %>
   <h4>住所</h4>
   <%= f.text_field :address %>
   <h4>電話番号</h4>
   <%= f.text_field :telephone_number %>
   <h4>メールアドレス</h4>
   <%= f.text_field :email %>
   <p><%= f.submit "編集内容を保存", class: "btn-sm btn-success" %></p>
   <% end %>
   <%= link_to "退会する", public_withdraw_path(current_customer.id),method: :patch, "data-confirm" => "本当に退会しますか？", class: "btn btn-danger" %>
  </div>
</div>