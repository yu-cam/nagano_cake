<div class="container">
  <div class="row">
  	<h2>商品一覧</h2>
	<% @items.each do |item| %>
	<tr>
	  <th><%= attachment_image_tag item, :image, :fill, 150, 150, format: 'jpeg' %></th>
    <td><%= link_to item.name, public_item_path(item.id) %>¥<%= item.price %></td>
  </tr>
	<% end %>
  <%= paginate @items %>
  </div>
</div>