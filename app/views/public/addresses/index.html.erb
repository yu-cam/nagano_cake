<div class="container">
  <div class="row">
  <h1>配送先登録/一覧</h1>
  <%= form_with model: @address, url:public_addresses_path do |f| %>
  <h4>郵便番号(ハイフンなし)</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <h4>宛名</h4>
  <%= f.text_field :name %>
  <%= f.submit '新規登録', class: "btn-sm btn-success" %>
  <% end %>
  <div></div>
  <table class="table table-bordered">
	<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<% @addresses.each do |address| %>
			<th><%= address.postal_code %></th>
			<td><%= address.address %></td>
			<td><%= address.name %></td>
            <td><%= link_to "編集する", edit_public_address_path(address.id), class: "btn-sm btn-success" %>
            	<%= link_to "削除する", public_address_path(address.id),method: :delete, class: "btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
		</tr>
    </tbody>
   </table>
  </div>
</div>