<div class="container">
  <div class="row">
  <h1>注文情報入力</h1>

<h4>支払い方法</h4>
<%= form_with model: @order, url:orders_confirm_path do |f| %>
  <label><%= f.radio_button :payment_methot, 0 %> クレジットカード </label>
  <label><%= f.radio_button :payment_methot, 1 %> 銀行振り込み</label>


<h4>お届け先</h4>
  <label><%= f.radio_button :address_option, 0 %>"ご自身の住所"</label>
         <%= @customer.address %>
         <%= @customer.last_name %>

  <label><%= f.radio_button :address_option, 1 %>"登録済みの住所から選択"</label>
                              :users_id, @users, :id, :name
      <%= f.collection_select :address, @customer.address, :id, :[["", 1], ["", 2], ["", 3], ["", 4]],selected: address %>

    <label><%= f.radio_button :address_option, 3 %>"新しいお届け先"</label>
    <h4>郵便番号 ハイフンなし</h4><%= f.text_field :postal_code %>
    <h4>住所</h4><%= f.text_field :address %>
    <h4>宛名</h4><%= f.text_field :name %>
    <%= f.submit "確認画面へ進む", class: "btn-sm btn-success"%>
<% end %>

  </div>
</div>