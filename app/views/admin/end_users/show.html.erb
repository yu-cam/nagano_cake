<div class="container">
  <div class="row">

  	<h4><%= @customer.first_name %><%= @customer.last_name %> さんの会員詳細</h4>

   <h4>会員ID</h4>
   <P><%= @customer.id %></P>

  	<h4>氏名</h4>
    <p><%= @customer.first_name %><%= @customer.last_name %></p>

    <h4>フリガナ</h4>
    <p><%= @customer.first_name_kana %><%= @customer.last_name_kana %></p>

    <h4><郵便番号</h4>
    <p><%= @customer.postal_code %>

    <h4>住所</h4>
    <p><%= @customer.address %></p>

    <h4>電話番号</h4>
    <P><%= @customer.telephone_number %></p>

    <h4>メールアドレス</h4>
    <p>@customer.email</p>

　　<h4>会員ステータス</h4>
   <% if @customer.is_active == true %>有効<% else false %>退会
   <% end %>
   <!-- btn -->
   <%= link_to "編集する", edit_admin_end_user_path(@customer.id),class: "btn-sm btn-success" %>

  </div>
</div>

