<div class="container">
  <div class="row">
	<div class="col-md-6 col-md-offset-3">
	<h1>商品編集</h1>
<!-- form_for部分 -->
<%= form_for(@item) do |f| %>
　<h4>商品画像</h4>

  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>

  <h4>税抜価格</h4>
  <%= f.number_field :price %>
  <h4>販売ステータス</h4>
　<%= f.radio_button :is_active, "販売中" %> <%= f.radio_button :is_active, "販売停止中" %>
  <button type="submit" class="btn-sm btn-success col-xs-12">変更を保存</button>
<% end %>

　　</div>
  </div>
</div>