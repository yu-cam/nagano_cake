<div class="container">
  <div class="row">
	<div class="col-md-6 col-md-offset-3">
	<h1>商品編集</h1>
<!-- form_for部分 -->
<%= form_for(@item, url:admin_item_path) do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>

  <h4>商品名</h4>
  <%= f.text_field :name %>

  <h4>商品説明</h4>
  <%= f.text_area :introduction %>

  <h4>ジャンル</h4>
  <%= f.select :genre_id, [["ケーキ", 1], ["プリン", 2], ["焼き菓子", 3], ["キャンディ", 4]], include_blank: "選択してください" %>

  <h4>税抜価格</h4>
  <%= f.number_field :price %>

  <h4>販売ステータス</h4>
  <label>
　<%= f.radio_button :is_active, true %> 販売中 </label>
　<label><%= f.radio_button :is_active, false %> 販売停止中</label>

<!-- btn -->
  <button type="submit" class="btn-sm btn-success col-xs-12">変更を保存</button>
<% end %>
  </div>
  </div>
</div>