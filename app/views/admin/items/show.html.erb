<div class="container">
  <div class="row">
  <div class="col-md-4">
<h2>商品詳細</h2>
<!-- image -->
<%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg' %>
  </div>

<div class="col-md-8 ">
<h4>商品名</h4>
<p><%= @item.name %></p>

<h4>商品説明</h4>
<p><%= @item.introduction %></p>

<h4>ジャンル</h4>
<p><%= @item.genre.name %>

<h4>税込価格(税抜価格)</h4>
<p><%= @item.price %></p>
<P><%= ((@item.price * 1.08).round(2)).ceil %></p>

<h4>販売ステータス</h4>
<% if @item.is_active == true %>販売中
<% else false %>販売停止中
<% end %>
<!-- btn -->
<%= link_to "編集する", edit_admin_item_path(@item.id),class: "btn-sm btn-success" %>

  </div>
  </div>
</div>
