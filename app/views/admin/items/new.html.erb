<div class="container">

<h2>商品新規登録</h2>
	<%= form_for(@item, url: '/items') do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  ######<%= item.genre_id %>
  <h4>税抜価格</h4>
  <%= f.text_field :price %><h4>円</h4>
  <h4>販売ステータス</h4>
  #####<% is_active %>
  <button type="submit" class="btn-sm btn-success">新規登録</button>
  <% end %>