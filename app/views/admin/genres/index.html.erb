<div class="container">
  <div class="row">
  	<div class="col-xs-5">
      <h3>ジャンル一覧・追加</h3>
      <br>
      <%= form_for(@genre_new, url:admin_genres_path) do |f| %>
      <h4>ジャンル名</h4>
      <%= f.text_field :name %>
      <%= f.submit '新規登録', class: "btn-sm btn-success" %>
      <% end %>

      <table class="table table-striped">
        <thead>
          <tr>
		        <th>ジャンル</th>
		          <th colspan="3"></th>
		      </tr>
	      </thead>
	      <tbody>
		      <% @genres.each do |genre| %>
	        <tr>
            <td><%= genre.name %></td>
             <td>
             <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn-sm btn-success" %>
             <td>
             </td>
          </tr>
		      <% end %>
	      </tbody>
      </table>
    </div>
  </div>
</div>
